<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model"
        android:layout_toEndOf="@+id/imgBookCover"
        android:layout_alignParentTop="true"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvModel"
        android:text="Status"
        android:layout_toEndOf="@+id/imgBookCover"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAStatus"
        android:layout_toEndOf="@+id/imgBookCover"
        android:text="Description" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRemarks"
        android:layout_toEndOf="@+id/imgBookCover"
        android:text="Brand" />

    <TextView
        android:id="@+id/tvPlateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBrand"
        android:layout_toEndOf="@+id/imgBookCover"
        android:text="PlateNumber" />

    <ImageView
        android:id="@+id/imgBookCover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/default_cover"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp" />
</RelativeLayout>
